<% provide(:title, 'Staff Directory') %>
<h1 class="center">Staff Profiles</h1>

<section>
  <div class="btns-bar">
    <center>
      <%= link_to 'Create Staff', new_staff_path, class: "btn btn-primary btn-medium" %>
    </center>
  </div>
</section>

<main class="pictures">
  <% if @results.blank? %>
    <p>No results. Try searching for something else.</p>
  <% else %>
    <% @results.each do |profile| %>
      <a class="profile" href="<%= profile[:link] %>">
        <div class="profile__picture-wrapper">
          <img class="profile__picture" src="<%=profile[:image_url] %>">
        </div>
        <h2 class="profile__name">
          <%= profile[:name] %>
        </h2>
      </a>
    <% end %>
  <% end %>
</main>

