<% @allProfiles = Profile.ransack(params[:q]).result %>
 <div class="one">
  <br/>
<br/>
  <p> <font size="6"> All Residents: <br/><br/></font></p>
   <% @allProfiles.each do |person| %>
<p> <font size="5"> 
<br/>
<%= image_tag person.last_name.to_s + ", " + person.first_name.to_s+".png", size: 100 %>
<a href= <%= "/profiles/" + person.id.to_s %> >   <%= person.first_name %> <%= person.last_name %></a> 
<font/>
<br/>

<% if person.email.present? %>
Email: <%= person.email %> <br/>
<% end %>

<% if person.landline.present? %>
Landline: <%= person.landline %> <br/>
<% end %>

<% if person.cell.present? %>
Cell: <%= person.cell %> <br/>
<% end %>

<% if person.nickname.present? %>
Nickname: <%= person.nickname %> <br/>
<% end %>

<% if person.address.present? %>
Address: <%= person.address %> <br/>
<% end %>

<% if person.spouse.present? %>
Spouse: <%= person.spouse %> <br/>
<% end %>

<% if current_user.admin %>
 <%= link_to "edit", "/profiles/" + person.id.to_s + "/edit"  %>
<% end %>
<% if current_user.admin %>
    | <%= link_to "delete", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
<br/>
<br/>
<% end %>
<li><%= link_to "Add new Resident", "/profiles/new" %></li>
</div>