<%= form_for @department do |f| %>
<%= render 'shared/error_messages', object: f.object%>

  <div class="form-horizontal", style="text-align:left">
    <div class="form-group">

      <div class="col-md-4" style="background-color: #f6f6f6; height: 100%; padding-bottom: 50px;">
      	<h2><%= f.label :contact %></h2>
        <%= f.text_field :contact, class: 'form-control', placeholder: 'Enter contact information' %>
      </div>

      <div class="col-md-8" style="padding-left: 20px;">

        <h2><%= f.label :name %></h2>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter department name' %>

      	<h2><%= f.label :description %></h2>
      	<%= f.text_field :description, class: 'form-control', placeholder: 'Enter description' %>

      	<h2><%= f.label "Services" %></h2>
      	<ul>
          <%= f.fields_for :services do |service|%>
          <%= render 'service_fields', :f => service %>
          <% end %>
          <div class='links'>
            <%= link_to_add_association 'add service', f, :services %>
          </div>
        </ul>

        <section>
    	<h2>Staff</h2>

        <div class="col-md-4 dept-div--profile">
            <%= image_tag("mayflower_logo_large.png", class: "dept-div--profile_picture") %>
            <h3 class="center">Dennis Chan</h3>
            <h4 class="center">Software Developer</h4>
          <a href="" class="btn btn-alert dept-a--remove">Remove Association</a>
        </div>


        <div class="col-md-4 dept-div--profile">
            <%= image_tag("mayflower_logo_large.png", size: "50x50") %>
            <h3 class="center">John Lennon</h3>
            <h4 class="center">Product Owner</h4>
          <a href="" class="btn btn-alert dept-a--remove">Remove Association</a>
        </div>

    </section>

      </div>
      <div class="clear" style="clear: both">
      </div>

    </div>
  </div>

  <center class="btns-bar btns-bar-btm">
    <%= link_to "Back", :back, class: "btn btn-primary btn-medium",
                              data: { confirm: "Are you sure you do not want to save?"} %>
    <%= f.submit "Save", class: "btn btn-primary btn-medium" %>
    <!-- TODO: add return/cancel button -->
    <%= link_to "Delete", @department, method: :delete, class: "btn btn-alert btn-medium",
                              data: { confirm: "Are you sure you want to delete this department?"} %>
  </center>

<% end %>

