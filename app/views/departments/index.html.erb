<p id="notice"><%= notice %></p>

<h1 class="center">Departments</h1>

<center class="btns-bar">
  <% if current_user.admin %>
    <div class="row" style="margin: 5px;">
      <%= link_to 'Create Department', new_department_path, class: "btn btn-primary btn-medium" %>
    </div>
  <% end %>
</center>


<center>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <div class="gallery">
            <a href= <%= "/departments/" + department.id.to_s %> >
      			<img src="http://www.mayflowerhomes.com/wp-content/gallery-bank/original-images/o_19v6khnbp27b1foi11sc11mh3r8p.jpg">
         		<h2 class="info"> <%= department.name%> </h2></a>
        </tr>
      <% end %>
    </tbody>
  </table>
</center>