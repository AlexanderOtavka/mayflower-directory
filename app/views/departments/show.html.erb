
<!-- <p id="notice"><%= notice %></p> -->

<h1 class="row center"><%= @department.name %></h1>

<div class="row center dept-breadcrumbs" style="margin: 15px;">
  <a href="/departments" >Departments</a> > <%= @department.name %>
</div>

<% if current_user.admin %>
<center class="btns-bar">
  <%= link_to "Edit", "/departments/" + @department.id.to_s + "/edit", class: "btn btn-primary btn-medium"  %>
   <%= link_to "Delete", @department, method: :delete, class: "btn btn-alert btn-medium",
                        data: { confirm: "Are you sure you want to delete this department?" } %>
</center>
<% end %>

<section class="department-info">
  <div class="col-md-4" style="background-color: #f6f6f6; height: 100%; padding-bottom: 50px;">
    <section>
    	<h2>Contact</h2>
    	<p>Add a staff for this <p>
    </section>
  </div>

  <div class="col-md-8" style="padding-left: 20px;">

    <section>
    	<h2>Description</h2>
    	<p><%= @department.description %></p>
    </section>

    <section>
    	<h2>Services</h2>
    	<ul>
    	  <% @services.each do |s| %>
    		<li><%= s.content %></li>
    		<% end %>
    	</ul>
  	</section>

  	<section>
    	<h2>Staff</h2>
      <%= @department.staffs.each do |staff| %>
        <div class="col-md-4 dept-div--profile">
        <a href="https://rails-tutorial-grinnelldennis.c9users.io/staffs/3">
          <%= image_tag("mayflower_logo_large.png", class: "dept-div--profile_picture") %>
          <h3 class="center"><%= staff.first_name %>, <%= staff.last_name %></h3>
          <% if staff.title.present? %>
          <h4 class="center"><%= staff.title %></h4>
          <%end%>
        </a>
      </div>
      <% end %>


    </section>

  </div>
</section>

<!-- Stops footer from rising -->
<div class="clear" style="clear: both"></div>


