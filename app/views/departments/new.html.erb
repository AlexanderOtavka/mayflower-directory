<html>
<h1 class = "center">New Department</h1>

 <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@department) do |f| %>
          <div class="form-horizontal", style="text-align:left">
            <div class="form-group">
              
            <%= f.label :name, class: "col control-label" %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Enter department name' %>
          
            <%= f.label :contact, class: "col control-label" %>
            <%= f.text_field :contact, class: 'form-control', placeholder: 'Enter contact' %>
            
            <%= f.label :description, class: "col control-label" %>
            <%= f.text_field :description, class: 'form-control', placeholder: 'Enter department description' %>
          
          </div>
          </div>
          <center>
          <%= f.submit "Save", class: "btn btn-primary btn-large" %>
         </center>
        <% end %>
<%= link_to 'Back', departments_path %>
</html>
